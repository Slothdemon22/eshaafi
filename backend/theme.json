{
    "$schema": "https://json.schemastore.org/theme.json",
    "version": 2,
    "settings": {
      "color": {
        "palette": [
          { "slug": "primary", "color": "#0E6BA8", "name": "Primary Blue" },
          { "slug": "secondary", "color": "#1CA7A6", "name": "Teal Secondary" },
          { "slug": "accent", "color": "#4CAF50", "name": "Healing Green" },
          { "slug": "background", "color": "#F9FAFB", "name": "Background" },
          { "slug": "surface", "color": "#FFFFFF", "name": "Surface White" },
          { "slug": "text-primary", "color": "#1F2937", "name": "Text Primary" },
          { "slug": "text-secondary", "color": "#4B5563", "name": "Text Secondary" },
          { "slug": "muted", "color": "#9CA3AF", "name": "Muted Gray" },
          { "slug": "danger", "color": "#DC2626", "name": "Error Red" },
          { "slug": "warning", "color": "#F59E0B", "name": "Warning Orange" },
          { "slug": "success", "color": "#16A34A", "name": "Success Green" },
          { "slug": "info", "color": "#0284C7", "name": "Info Blue" }
        ]
      },
      "typography": {
        "fontFamilies": [
          { "slug": "heading", "fontFamily": "'Poppins', 'Helvetica Neue', sans-serif", "name": "Heading" },
          { "slug": "body", "fontFamily": "'Inter', 'Arial', sans-serif", "name": "Body" },
          { "slug": "monospace", "fontFamily": "'Roboto Mono', monospace", "name": "Monospace" }
        ],
        "fontSizes": [
          { "slug": "xs", "size": "0.75rem", "name": "Extra Small" },
          { "slug": "sm", "size": "0.875rem", "name": "Small" },
          { "slug": "base", "size": "1rem", "name": "Base" },
          { "slug": "lg", "size": "1.125rem", "name": "Large" },
          { "slug": "xl", "size": "1.25rem", "name": "Extra Large" },
          { "slug": "2xl", "size": "1.5rem", "name": "2XL" },
          { "slug": "3xl", "size": "1.875rem", "name": "3XL" },
          { "slug": "4xl", "size": "2.25rem", "name": "4XL" },
          { "slug": "5xl", "size": "3rem", "name": "5XL" }
        ],
        "lineHeights": {
          "normal": 1.5,
          "relaxed": 1.75,
          "loose": 2
        }
      },
      "spacing": {
        "padding": [
          { "slug": "xs", "size": "0.25rem", "name": "Extra Small" },
          { "slug": "sm", "size": "0.5rem", "name": "Small" },
          { "slug": "md", "size": "1rem", "name": "Medium" },
          { "slug": "lg", "size": "1.5rem", "name": "Large" },
          { "slug": "xl", "size": "2rem", "name": "Extra Large" },
          { "slug": "2xl", "size": "3rem", "name": "2XL" }
        ]
      },
      "radius": {
        "small": "0.375rem",
        "medium": "0.5rem",
        "large": "0.75rem",
        "full": "9999px"
      },
      "shadows": {
        "sm": "0 1px 2px rgba(0,0,0,0.05)",
        "md": "0 4px 6px rgba(0,0,0,0.1)",
        "lg": "0 10px 15px rgba(0,0,0,0.15)",
        "xl": "0 20px 25px rgba(0,0,0,0.2)"
      }
    },
    "styles": {
      "typography": {
        "fontFamily": "var(--wp--preset--font-family--body)",
        "fontSize": "var(--wp--preset--font-size--base)",
        "lineHeight": "1.6",
        "color": "var(--wp--preset--color--text-primary)"
      },
      "elements": {
        "heading": {
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--heading)",
            "fontWeight": "600",
            "lineHeight": "1.3"
          },
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        },
        "link": {
          "typography": {
            "fontWeight": "500"
          },
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          },
          "hover": {
            "color": {
              "text": "var(--wp--preset--color--primary)"
            }
          }
        },
        "button": {
          "border": {
            "radius": "var(--wp--custom--radius--medium)"
          },
          "typography": {
            "fontWeight": "600",
            "fontSize": "var(--wp--preset--font-size--base)"
          },
          "color": {
            "text": "#FFFFFF",
            "background": "var(--wp--preset--color--primary)"
          },
          "hover": {
            "color": {
              "background": "var(--wp--preset--color--secondary)"
            }
          }
        },
        "input": {
          "border": {
            "color": "#D1D5DB",
            "radius": "var(--wp--custom--radius--small)"
          },
          "typography": {
            "fontSize": "var(--wp--preset--font-size--base)"
          },
          "color": {
            "text": "var(--wp--preset--color--text-primary)",
            "background": "#FFFFFF"
          },
          "focus": {
            "border": {
              "color": "var(--wp--preset--color--primary)"
            },
            "shadow": "0 0 0 3px rgba(14,107,168,0.3)"
          }
        },
        "card": {
          "border": {
            "radius": "var(--wp--custom--radius--large)"
          },
          "shadow": "var(--wp--custom--shadows--md)",
          "color": {
            "background": "var(--wp--preset--color--surface)"
          }
        },
        "alert": {
          "variants": {
            "success": {
              "color": {
                "background": "#ECFDF5",
                "text": "#065F46"
              }
            },
            "error": {
              "color": {
                "background": "#FEF2F2",
                "text": "#991B1B"
              }
            },
            "warning": {
              "color": {
                "background": "#FFFBEB",
                "text": "#92400E"
              }
            },
            "info": {
              "color": {
                "background": "#EFF6FF",
                "text": "#1E40AF"
              }
            }
          }
        }
      },
      "layout": {
        "contentSize": "1200px",
        "wideSize": "1440px",
        "spacing": {
          "blockGap": "1.5rem"
        }
      }
    }
  }
  